<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:banner="http://schemas.android.com/apk/res-auto"
    android:background="#000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.yueshenginfo.jnjw.modules.home.banner.ImageBanner
            android:id="@+id/banner_circle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            banner:bb_delay="2"
            banner:bb_period="2"
            banner:bb_barColor="#44000000"
            banner:bb_indicatorGravity="CENTER"
            banner:bb_scale="0.5"/>
        <com.flyco.pageindicator.indicator.RoundCornerIndicaor
            android:id="@+id/indicator_circle"
            xmlns:rci="http://schemas.android.com/apk/res-auto"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            rci:rci_cornerRadius="3dp"
            rci:rci_gap="5dp"
            rci:rci_selectColor="@color/red"
            rci:rci_height="6dp"
            rci:rci_width="6dp"/>
    </FrameLayout>
</RelativeLayout>